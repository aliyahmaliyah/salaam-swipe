    <!--Contact-->
    <div class='contact' id='contact'>
        <div class='container'>
            <div class='row'>
            <div class='col-lg-12 col-md-12'>
                <h1>Contact Us</h1>
                <p>Have feedback? Looking for an interview? Fill out the form below and we'll be in touch ASAP.</p>
            </div>
            </div>
            <form enctype='text/plain' method='POST' action='mailto:info@salaamswipe.com'>
                <div class='form-group'>
                    <label for='name'>Name</label>
                    <input type='text' id='formName' class='form-control' placeholder='Name'>
                </div>
                <div class='form-group'>
                    <label for='email'>Email</label>
                    <input type='email' id='formEmail' class='form-control' placeholder='Email'>
                </div>
                <div class='form-group'>
                    <label for='comment'>Comments</label>
                    <textarea type='textarea' name='comment' id='formComment' class='form-control' value='Comments'></textarea>
                </div>
                <input type="submit" name='submit' value='Send' id='formSubmit' class="btn btn-default"></input>
            </form>
        </div>
    </div>
