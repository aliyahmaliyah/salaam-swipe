    <!--News-->
    <div class='news' id='news'>
        <div class='container'>
            <div class='row'>
            <div class='col-lg-12 col-md-12'>
                <h1>News</h1>
                  <div class='col-lg-12 col-md-12'>
                      <% site.posts.sort('date', -1).limit(1).each(function(post){ %>
                      <h2>
                          <a href="<%=post.permalink%>">
                              <div class='postTitle'>
                                  <%= post.title %>
                              </div>
                          </a>
                      </h2>
                      <p><%-post.excerpt%></p>
                      <% }) %>
                  </div>
                <div class='col-lg-10 col-md-10'>
                  <button class="btn btn-default" href="/news" role="button">Read More</button>
                </div>
            </div>
            </div>
        </div>
    </div>
